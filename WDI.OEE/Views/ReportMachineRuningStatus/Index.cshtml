@model List<Common.ViewModels.MachineRuningStatusViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div style="padding-left: 0px;">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="control-caption" >Nhóm máy</label>
                            @Html.DropDownList("MachineGroupID", (List<SelectListItem>)ViewData["ListMachineGroup"], htmlAttributes: new { @class = "form-select form-select-sm mt-3", @onchange = "filterData()" })
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="control-caption" >Vị trí</label>
                            @Html.DropDownList("MachineLocationID", (List<SelectListItem>)ViewData["ListMachineLocation"], htmlAttributes: new { @class = "form-select form-select-sm mt-3", @onchange = "filterData()" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="divlistMachineRunningStatus" class="row">
@foreach (var machine in Model)
{
    @Html.Partial("_Machine.cshtml", machine);
}
</div>

<script>
    function filterData() {
        var _MachineGroup = $("#MachineGroupID").val();
        var _MachineLocation = $("#MachineLocationID").val();
        //debugger;
        $.ajax({
            url: "/ReportMachineRuningStatus/FilterData",
            method: "POST",
            dataType: "json",
            data: { MachineGroupID: _MachineGroup, MachineLocationID: _MachineLocation },
            async: true,
            beforeSend: function () { },
            success: function (result) {
                //debugger;
                if (result && result.success ===true) {
                    $("#divlistMachineRunningStatus").html(result.html);
                }
            },
            error: function (err) {
                console.log(err);
            }
        });
    }
</script>