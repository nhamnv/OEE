@model Common.ViewModels.MachineDetailViewModel


<div class="col-xl-12 col-md-12">
    <div class="card">
        <div class="card-header">
            <h5>Quản lý máy</h5>
        </div>
        <div class="card-block tab-icon">
            <div class="row">
                <!-- [Tabs content] start -->
                <div class="col-lg-12 col-xl-12 col-md-12">
                    <!-- [Tabs menu] start -->
                    <ul class="nav nav-tabs md-tabs tab6" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tab_machinedetail" role="tab" aria-expanded="true"><i class="tabname-icon icofont icofont-company"></i>Chi tiết máy</a>
                            <div class="slide"></div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tab_accessory" role="tab" aria-expanded="false"><i class="tabname-icon icofont icofont-wheel"></i>Linh kiện</a>
                            <div class="slide"></div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tab_maintenance" role="tab" aria-expanded="false"><i class="tabname-icon icofont icofont-tasks-alt"></i>Checklist bảo dưỡng</a>
                            <div class="slide"></div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tab_operationtime" role="tab" aria-expanded="false"><i class="tabname-icon icofont icofont-ui-settings"></i>Thời gian vận hành</a>
                            <div class="slide"></div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tab_errorlist" role="tab" aria-expanded="false"><i class="tabname-icon icofont icofont-exclamation-tringle"></i>Danh sách lỗi</a>
                            <div class="slide"></div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tab_repairehistory" role="tab" aria-expanded="false"><i class="tabname-icon icofont icofont-history"></i>Lich sử sửa chữa</a>
                            <div class="slide"></div>
                        </li>
                    </ul>
                    <!-- [Tabs menu] end -->
                    <!-- [tabs content] start -->
                    <div class="tab-content card-block">
                        <!-- [Tab: Tab chi tiết máy] start -->
                        <div class="tab-pane active" id="tab_machinedetail" role="tabpanel" aria-expanded="true">
                            @* <p class="m-0">1. Tab chi tiết máy.</p> *@
                            @await Html.PartialAsync("_PartialMachineDetail", Model.Machine)
                        </div>
                        <!-- [Tab: Tab chi tiết máy] end -->
                        <!-- [Tab: Tab linh kiện] start -->
                        <div class="tab-pane" id="tab_accessory" role="tabpanel" aria-expanded="false">
                            <p class="m-0">2. Tab linh kiện.</p>
                            @await Html.PartialAsync("_PartialMachineComponent")
                        </div>
                        <!-- [Tab: Tab linh kiện] end -->
                        <!-- [Tab: Tab linh kiện] end -->
                        <!-- [Tab: Tab checklist bảo dưỡng] start -->
                        <div class="tab-pane" id="tab_maintenance" role="tabpanel" aria-expanded="false">
                            <p class="m-0">3. Tab checklist bảo dưỡng.</p>
                        </div>
                        <!-- [Tab: Tab checklist bảo dưỡng] end -->
                        <!-- [Tab: Tab thời gian vận hành] start -->
                        <div class="tab-pane" id="tab_operationtime" role="tabpanel" aria-expanded="false">
                            <p class="m-0">4. Tab thời gian vận hành.</p>
                        </div>
                        <!-- [Tab: Tab thời gian vận hành] end -->
                        <!-- [Tab: Tab danh sách lỗi] start -->
                        <div class="tab-pane" id="tab_errorlist" role="tabpanel" aria-expanded="false">
                            <p class="m-0">4. Tab danh sách lỗi.</p>
                        </div>
                        <!-- [Tab: Tab danh sách lỗi] end -->
                        <!-- [Tab: Tab lịch sử sửa chữa] start -->
                        <div class="tab-pane" id="tab_repairehistory" role="tabpanel" aria-expanded="false">
                            <p class="m-0">5. Tab lịch sử sửa chữa.</p>
                        </div>
                        <!-- [Tab: Tab lịch sử sửa chữa] end -->
                    </div>
                    <!-- [tabs content] end -->
                </div>
                <!-- [Tabs content] end -->
            </div>
        </div>
        <div class="card-footer">
        </div>
    </div>
</div>