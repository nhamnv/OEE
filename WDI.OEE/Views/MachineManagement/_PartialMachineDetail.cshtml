@model Common.Data_Machine

<div class="col-xl-12 col-md-12">
    <div class="card user-card-full">
        <div class="row m-l-0 m-r-0">
            <div class="col-sm-12">
                <div class="card-block">
                    <div class="row">
                        <div class="col-sm-12 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    <img class="img-radius" alt="Ảnh đại diện máy" style="width:100%;object-fit: contain;" src="~/images/machines/@Model.UmageUrl" />
                                </div>
                                <h6 class="f-w-600">@Model.MachineName</h6>
                                <p>@Model.Model</p>
                                <i class="feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <!-- [Dòng thông tin 1] start -->
                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Thông tin máy</h6>
                    <div class="row">
                        <div class="col-sm-6">
                            <p class="m-b-10 f-w-600">Tên máy</p>
                            <h6 class="text-muted f-w-400">@Model.MachineName</h6>
                        </div>
                        <div class="col-sm-6">
                            <p class="m-b-10 f-w-600">Mã tài sản</p>
                            <h6 class="text-muted f-w-400">@Model.MachineAssetCode</h6>
                        </div>
                    </div>
                    <!-- [Dòng thông tin 1] end -->

                    <!-- [Dòng thông tin 2] start -->
                    <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600"></h6>
                    <div class="row">
                        <div class="col-sm-6">
                            <p class="m-b-10 f-w-600">Model</p>
                            <h6 class="text-muted f-w-400">@Model.Model</h6>
                        </div>
                        <div class="col-sm-6">
                            <p class="m-b-10 f-w-600">Serial No</p>
                            <h6 class="text-muted f-w-400">@Model.SerialNo</h6>
                        </div>
                    </div>
                    <!-- [Dòng thông tin 2] end -->


                    <!-- [Dòng thông tin 3] start -->
                    <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600"></h6>
                    <div class="row">
                        <div class="col-sm-6">
                            <p class="m-b-10 f-w-600">Nhóm tài sản</p>
                            <h6 class="text-muted f-w-400">@Model.AssetGroupName</h6>
                        </div>
                        <div class="col-sm-6">
                            <p class="m-b-10 f-w-600">Nhóm máy</p>
                            <h6 class="text-muted f-w-400">@Model.MachineGroupName</h6>
                        </div>
                    </div>
                    <!-- [Dòng thông tin 3] end -->
                    <!-- [Dòng thông tin 4] start -->
                    <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600"></h6>
                    <div class="row">
                        <div class="col-sm-6">
                            <p class="m-b-10 f-w-600">Mã kế toán</p>
                            <h6 class="text-muted f-w-400">@Model.AccountantCode</h6>
                        </div>
                        <div class="col-sm-6">
                            <p class="m-b-10 f-w-600">Đơn vị tính</p>
                            <h6 class="text-muted f-w-400">@Model.BaseUnitName</h6>
                        </div>
                    </div>
                    <!-- [Dòng thông tin 4] end -->
                    <!-- [Dòng thông tin 5] start -->
                    <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600"></h6>
                    <div class="row">
                        <div class="col-sm-6">
                            <p class="m-b-10 f-w-600">Nhà cung cấp</p>
                            <h6 class="text-muted f-w-400">@Model.ProviderName</h6>
                        </div>
                        @* <div class="col-sm-6">
                            <p class="m-b-10 f-w-600">Serial No</p>
                            <h6 class="text-muted f-w-400">SerialNo</h6>
                        </div> *@
                    </div>
                    <!-- [Dòng thông tin 5] end -->
                    <!-- [Dòng thông tin 6] start -->
                    <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600"></h6>
                    <div class="row">
                        <div class="col-sm-6">
                            <p class="m-b-10 f-w-600">Vị trí lắp đặt</p>
                            <h6 class="text-muted f-w-400">@Model.MachineLocationName</h6>
                        </div>
                        <div class="col-sm-6">
                            <p class="m-b-10 f-w-600">Thời gian đi vào hoạt động</p>
                            <h6 class="text-muted f-w-400">@Model.FirstUseDate</h6>
                        </div>
                    </div>
                    <!-- [Dòng thông tin 6] end -->

                    <ul class="social-link list-unstyled m-t-40 m-b-10">
                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook"><i class="feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter"><i class="feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram"><i class="feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>